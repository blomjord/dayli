@using Microsoft.VisualBasic
@{
    ViewData["Title"] = "Home";
}

@model HomepageData
<div class="container">

<div class="row">
    <div class="col-md-6">
        <h3 class="center">Today's weather</h3>
        <p>Current prognosis was created: @Model.Weather.createdTime</p>
        <p>Prognosis based on coordinates: @Model.Weather.geometry.coordinates[1] @Model.Weather.geometry.coordinates[0]</p>
        <div class="row">
            <div class="col-md-6">
                @foreach (var element in Model.Weather.timeSeries.Take(12)) {
                    <p>@element.time</p>
                }
            </div>
            <div class="col-md-6">
                @foreach (var element in Model.Weather.timeSeries.Take(12)) {
                    <p>@element.data.air_temperature &degC</p>
                }
                
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <h3>Today's calendar</h3>
        <p>@Model.Calendar?.UserId</p>
    </div>
</div>

</div>